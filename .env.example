# ============================================
# The Starter Pack - Environment Configuration
# ============================================
# Copy this file to .env.local and fill in your values

# Database Configuration (Required)
# For local development, use PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/starter_pack_db"
DIRECT_URL="postgresql://postgres:postgres@localhost:5432/starter_pack_db"

# NextAuth Configuration (Required)
# Generate secret with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here-min-32-chars"

# OAuth Providers (Optional)
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
# Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# AI Providers (Optional)
# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=""
# Anthropic: https://console.anthropic.com/
ANTHROPIC_API_KEY=""

# Supabase Configuration (Optional - for production)
# Get from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=""
NEXT_PUBLIC_SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""

# Email Service (Optional)
# Using Resend: https://resend.com/api-keys
RESEND_API_KEY=""
EMAIL_FROM="noreply@yourdomain.com"

# Redis Configuration (Optional - for caching)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"

# Monitoring & Analytics (Optional)
# Sentry: https://sentry.io/settings/account/api/auth-tokens/
SENTRY_DSN=""
# Google Analytics
NEXT_PUBLIC_GA_ID=""

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
APP_NAME="AI Guided SaaS"

# Feature Flags
ENABLE_AI_FEATURES="true"
ENABLE_ANALYTICS="false"
ENABLE_EMAIL_AUTH="true"
ENABLE_ADMIN_PANEL="false"

# Admin Configuration (Optional)
ADMIN_EMAIL=""
ADMIN_PASSWORD=""
ADMIN_JWT_SECRET=""

# Development Settings
NODE_ENV="development"
ENABLE_MCP_SERVERS="false"

# Deployment (Optional)
# Vercel: https://vercel.com/account/tokens
VERCEL_TOKEN=""
VERCEL_ORG_ID=""
VERCEL_PROJECT_ID=""