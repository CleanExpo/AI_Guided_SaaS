#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint-staged for code quality
npx lint-staged

# Run type checking
echo "🔧 Type checking..."
npm run typecheck

# Run tests
echo "🧪 Running tests..."
npm run test

echo "✅ Pre-commit checks passed!"
