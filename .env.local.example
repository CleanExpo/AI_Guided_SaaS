# AI Guided SaaS - Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# ===== CORE APPLICATION =====
NEXT_PUBLIC_APP_URL=http://localhost:3001
NODE_ENV=development

# ===== AUTHENTICATION =====
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-super-secret-nextauth-secret-here-generate-a-strong-one

# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===== SUPABASE CONFIGURATION =====
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===== AI SERVICES =====
# OpenAI (Primary AI Provider)
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Anthropic Claude (Alternative AI Provider)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google AI (Alternative AI Provider)
GOOGLE_AI_API_KEY=your-google-ai-api-key

# ===== CLAUDE CODE INTEGRATION =====
# MongoDB for Deployment Intelligence (Optional)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai_guided_saas
MONGODB_DB_NAME=ai_guided_saas

# Optional X.509 Certificate Authentication for MongoDB
# MONGODB_SSL_CERT_PATH=/path/to/client.pem
# MONGODB_SSL_CA_PATH=/path/to/ca.pem

# ===== EXTERNAL SERVICES =====
# Redis for Caching (Optional)
REDIS_URL=redis://localhost:6379

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===== ANALYTICS & MONITORING =====
# Google Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn

# ===== DEVELOPMENT TOOLS =====
# Feature Flags
NEXT_PUBLIC_ENABLE_CLAUDE_CODE=true
NEXT_PUBLIC_ENABLE_ERROR_PREVENTION=true
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=false

# Debug Mode
NEXT_PUBLIC_DEBUG_MODE=false
